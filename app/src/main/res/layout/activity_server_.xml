<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SERVER_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        tools:ignore="MissingConstraints" />
    <Spinner
        android:id="@+id/cochingSpin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:background="@color/colorAccent"
        android:entries="@array/select"


        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/cochingSpin"
        android:layout_alignRight="@+id/cochingSpin"
        android:src="@drawable/download"
        android:layout_alignTop="@id/cochingSpin"
        android:layout_alignBottom="@+id/cochingSpin"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>